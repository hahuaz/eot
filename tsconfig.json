{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": [
    "src/index.ts",
    "src/lib/**/*.ts",
    "src/shared/**/*.ts",
    "src/manual-scrape.ts"
  ],
  "exclude": ["node_modules"]
}
